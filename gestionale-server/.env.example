NODE_ENV=production
HOST=127.0.0.1
PORT=3001

# Security
JWT_SECRET=replace_with_at_least_32_chars_random_string
JWT_REFRESH_SECRET=replace_with_at_least_32_chars_random_string
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
APP_BASE_URL=https://your-app.example
INVITE_EXPIRATION_HOURS=48
CORS_ORIGIN=https://your-domain.example
TRUST_PROXY=false
FORCE_HTTPS=true

# Transport
HTTP_ENABLED=false
HTTPS_ENABLED=true
HTTPS_REDIRECT=true
HTTPS_PORT=443
HTTPS_PFX_PATH=
HTTPS_PFX_PASSPHRASE=
HTTPS_KEY_PATH=
HTTPS_CERT_PATH=
HSTS_ENABLED=true

# Data paths
DB_PATH=./data/gestionale.db
UPLOAD_DIR=./uploads
UPLOAD_MAX_SIZE_MB=10
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_DIR=./backups
MAX_BACKUPS=30

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_RETENTION_DAYS=30
LOG_RETENTION_CHECK_HOURS=24

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=600000
AUTH_RATE_LIMIT_MAX_REQUESTS=20

# Refresh cookie (HttpOnly)
REFRESH_COOKIE_NAME=gestionale_refresh_token
REFRESH_COOKIE_PATH=/api/auth
REFRESH_COOKIE_DOMAIN=
REFRESH_COOKIE_SECURE=true
REFRESH_COOKIE_SAMESITE=lax
REFRESH_COOKIE_MAX_AGE_MS=604800000

# CSRF protection (double-submit cookie + origin check)
CSRF_COOKIE_NAME=gestionale_csrf_token
CSRF_COOKIE_PATH=/api
CSRF_COOKIE_DOMAIN=
CSRF_COOKIE_SECURE=true
CSRF_COOKIE_SAMESITE=lax
CSRF_ENFORCE_ORIGIN=true

# Privacy retention
PRIVACY_RETENTION_ENABLED=true
PRIVACY_RETENTION_RUN_HOURS=24
PRIVACY_REQUEST_RETENTION_DAYS=730
SECURITY_EVENT_RETENTION_DAYS=90

# Bootstrap admin (ONLY setup, then disable)
SEED_DEFAULT_ADMIN=false
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=
DEFAULT_ADMIN_NOME=Default
DEFAULT_ADMIN_COGNOME=Admin

# Fatture in Cloud
FATTURE_IN_CLOUD_API_BASE=https://api-v2.fattureincloud.it
FATTURE_IN_CLOUD_API_TOKEN=
FATTURE_IN_CLOUD_COMPANY_ID=
FATTURE_IN_CLOUD_SYNC_ENABLED=true
FATTURE_IN_CLOUD_SYNC_ON_STARTUP=true
FATTURE_IN_CLOUD_SYNC_INTERVAL_HOURS=168
FATTURE_IN_CLOUD_PAGE_SIZE=100
